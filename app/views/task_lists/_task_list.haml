%tr.task_list
  %th.title{:colspan=>3}
    = task_list.title
  %th.new_task{:colspan=>3}
    = link_to "New task", new_task_list_task_url(task_list)
= render :partial=>task_list.sorted_tasks
%tr.total
  %td{:colspan=>4}
  %td.earnings
    = task_list.earnings.format(:accurate)
  %td.duration
    = duration(task_list.duration)