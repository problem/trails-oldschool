- fields_for edit do |form|
  %tr{:class=>"form #{edit.new_record? ? 'new' : 'edit'}",:id=>(edit.new_record? ? "task_list_#{edit.task_list.id}" : "edit"), :style=>"display:none"}[edit]
    %td.external
    %td{:colspan=>2}
    %td.description
      = form.text_field   :description, :disabled=>true
    %td.rate{:colspan=>3}
      = "$"
      = form.text_field :rate, :disabled=>true
      = "/h"
    %td.submit.external
      - if edit.new_record?
        = form.submit "Create task" , :action => task_list_tasks_path(edit.task_list.id), :disabled=>true
      - else
        = form.submit "Save task", :action => task_path(edit), :method=>"put", :disabled=>true
      = link_to "Cancel", "#cancel"
      