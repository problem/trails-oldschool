- fields_for edit do |form|
  %tr{:class=>'edit',:id=>"task_list_#{edit.task_list.id}", :style=>"display:non"}[edit]
    %td{:colspan=>2}
    %td.description
      = form.text_field   :description
    %td.rate{:colspan=>3}
      = "$"
      = form.text_field :rate
      = "/h"
    %td.submit.external
      = form.submit((if edit.new_record? then "Create" else "Save" end), :action => task_list_tasks_path(edit.task_list.id))
      = link_to "Cancel", "#cancel"
      